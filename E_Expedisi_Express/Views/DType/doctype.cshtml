@model IEnumerable<E_Expedisi_Express.Models.DocumentType>

@{
    ViewData["Title"] = "Document Types";
}
<link rel="stylesheet" href="~/lib/data-tables/datatables.min.css">
<link rel="stylesheet" href="~/css/adddoc.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<div class="asset_table">
    <div class="table_section">
        <div class="table_header">
            <button class="btn-add-doc" data-toggle="modal" data-target="#addDocumentModal">Tambah Document</button>
        </div>
        <table id="documentTypeTable">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Code</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="documentTypeTableBody">

            </tbody>
        </table>
    </div>
</div>

<!-- Modal untuk Tambah Document -->
<div class="modal fade" id="addDocumentModal" tabindex="-1" role="dialog" aria-labelledby="addDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addDocumentModalLabel">Tambah Document Type</h5>
            </div>
            <div class="modal-body">
                <form id="addDocumentForm">
                    <div class="form-group">
                        <label for="code">Code</label>
                        <input type="text" class="form-control" id="code" name="code" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" class="form-control" id="description" name="description" required>
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select class="form-control" id="status" name="status" required>
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                <button type="button" class="btn btn-primary" id="saveDocumentBtn">Simpan</button>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="~/lib/data-tables/datatables.min.js"></script>
<script src="~/js/adddoc.js"></script>
<script src="~/js/datatables-view.js"></script>
