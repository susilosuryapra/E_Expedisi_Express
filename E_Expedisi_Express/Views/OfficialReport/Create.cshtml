@model E_Expedisi_Express.DTO.OfficialReportDTO

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 d-flex align-items-center">
                    <h1 class="m-0 mr-2">Official Report</h1>
                    <h2 class="mr-2">| </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/OfficialReport">Official Report</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/OfficialReport/Create">Add Official Report</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-8">
                                    <h4>Add New Official Report / <span class="font-italic">Buat Berita Acara</span></h4>
                                    <p class="paragraph-custom">Be sure to input the correct and valid data</p>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                                <!-- Title Section -->
                                <h5 class="mt-4">Title / <span class="font-italic">Judul</span></h5>
                                <div class="form-group">
                                    <label asp-for="ReportTitle">Title</label>
                                    <input asp-for="ReportTitle" class="form-control" placeholder="Title" required />
                                    <span asp-validation-for="ReportTitle" class="text-danger"></span>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="DepartmentId">Department Code</label>
                                        <input asp-for="DepartmentId" class="form-control" placeholder="Department Code" />
                                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="DocumentTypeId">Document Type</label>
                                        <input asp-for="DocumentTypeId" class="form-control" placeholder="Document Type" />
                                        <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Giver Section -->
                                <h5 class="mt-4">Giver / <span class="font-italic">Pemberi</span></h5>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="GiverName">Name</label>
                                        <input asp-for="GiverName" class="form-control" placeholder="Giver Name" required />
                                        <span asp-validation-for="GiverName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="GiverCompanyName">Company Name</label>
                                        <input asp-for="GiverCompanyName" class="form-control" placeholder="Giver Company Name" />
                                        <span asp-validation-for="GiverCompanyName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="GiverDepartmentName">Department</label>
                                        <input asp-for="GiverDepartmentName" class="form-control" placeholder="Giver Department" />
                                        <span asp-validation-for="GiverDepartmentName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="GiverAddress">Address</label>
                                        <input asp-for="GiverAddress" class="form-control" placeholder="Giver Address" required />
                                        <span asp-validation-for="GiverAddress" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Content Section -->
                                <h5 class="mt-4">Content / <span class="font-italic">Isi</span></h5>
                                <div class="form-group">
                                    <label asp-for="MainDescription">Description</label>
                                    <textarea asp-for="MainDescription" class="form-control" rows="3" placeholder="Description goes here" required></textarea>
                                    <span asp-validation-for="MainDescription" class="text-danger"></span>
                                </div>

                                <!-- Receiver Section -->
                                <h5 class="mt-4">Receiver / <span class="font-italic">Penerima</span></h5>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="ReceiverName">Name</label>
                                        <input asp-for="ReceiverName" class="form-control" placeholder="Receiver Name" required />
                                        <span asp-validation-for="ReceiverName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="ReceiverCompanyName">Company Name</label>
                                        <input asp-for="ReceiverCompanyName" class="form-control" placeholder="Receiver Company Name" />
                                        <span asp-validation-for="ReceiverCompanyName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="ReceiverDepartmentName">Department</label>
                                        <input asp-for="ReceiverDepartmentName" class="form-control" placeholder="Receiver Department" />
                                        <span asp-validation-for="ReceiverDepartmentName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="ReceiverAddress">Address</label>
                                        <input asp-for="ReceiverAddress" class="form-control" placeholder="Receiver Address" required />
                                        <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Save and Publish buttons -->
                                <div class="form-group d-flex mt-5">
                                    <!-- Tombol Save as Draft, dengan value IsPublished = false -->
                                    <button type="submit" name="submitAction" value="draft" class="btn btn-secondary mr-3">Save as Draft</button>

                                    <!-- Tombol Publish, dengan value IsPublished = true -->
                                    <button type="submit" name="submitAction" value="publish" class="btn btn-success">Publish</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
