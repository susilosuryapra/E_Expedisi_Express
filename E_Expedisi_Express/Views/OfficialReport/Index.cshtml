@model IEnumerable<E_Expedisi_Express.DTO.OfficialReportDTO>

<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6 d-flex align-items-center">
                    <h1 class="m-0 mr-2">Official Report</h1>
                    <h2 class="mr-2">| </h2>
                    <nav aria-label="breadcrumb" id="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/OfficialReport">Official Report</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <!-- Tombol Add New Record -->
                            <div class="d-flex justify-content-between mb-3">
                                <a href="/OfficialReport/Create" class="btn btn-success">Add New Record</a>
                            </div>

                            <table id="officialReportsTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Title</th>
                                        <th>Giver</th>
                                        <th>Receiver</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center align-middle">@item.Id</td>
                                            <td>@item.Title</td>
                                            <td>@item.Giver</td>
                                            <td>@item.Receiver</td>
                                            <td>@item.Date</td>
                                            <td>@item.Status</td>
                                            <td class="text-center align-middle">
                                                <a href="/OfficialReport/Edit/@item.Id" class="btn btn-sm btn-success">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- DataTables JS -->
@section Scripts {
    <script src="~/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#officialReportsTable').DataTable({
                "responsive": true,
                "autoWidth": false,
            });
        });
    </script>
}
