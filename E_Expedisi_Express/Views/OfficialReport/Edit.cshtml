@model E_Expedisi_Express.Models.OfficialReport

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 d-flex align-items-center">
                    <h1 class="m-0 mr-2">Official Report</h1>
                    <h2 class="mr-2">| </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/OfficialReport">Official Report</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/OfficialReport/Edit/@Model.Id">Edit Official Report</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h4>Update Official Report / <span class="font-italic">Update Berita Acara</span></h4>
                                        <p class="paragraph-custom">Be sure to update the correct and valid data</p>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-between">
                                            <p>Creator</p>
                                            <p>: </p>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <p>Date Created</p>
                                            <p>: </p>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <p>Status</p>
                                            <p>: </p>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <p>Actions</p>
                                            <p>: </p>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div>
                                            <p>UserName</p>
                                        </div>
                                        <div>
                                            <p>@Model.Date.ToString("dd MMMM yyyy")</p>
                                        </div>
                                        <div>
                                            <p>
                                                <span class="badge badge-success">Publish</span>
                                                <span class="badge badge-warning">Draft</span>
                                            </p>
                                        </div>
                                        <div>
                                            <p><i class="fas fa-download"></i></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <form asp-action="Edit" method="post" class="needs-validation" novalidate>

                                <!-- Title Section -->
                                <h5 class="mt-4">Title / <span class="font-italic">Judul</span></h5>
                                <div class="form-group">
                                    <label asp-for="Title">Title / Judul</label>
                                    <input asp-for="Title" class="form-control" placeholder="Title" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Department Code</label>
                                        <input type="text" class="form-control" placeholder="Placeholder" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Document Type</label>
                                        <input type="text" class="form-control" placeholder="Placeholder" />
                                    </div>
                                </div>

                                <!-- Giver Section -->
                                <h5 class="mt-4">Giver / <span class="font-italic">Pemberi</span></h5>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Giver">Name</label>
                                        <input asp-for="Giver" class="form-control" placeholder="Placeholder" required />
                                        <span asp-validation-for="Giver" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Company Name</label>
                                        <input type="text" class="form-control" placeholder="Placeholder" />
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Department</label>
                                        <input type="text" class="form-control" placeholder="Placeholder" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Address</label>
                                        <input type="text" class="form-control" placeholder="Placeholder" />
                                    </div>
                                </div>

                                <!-- Content Section -->
                                <h5 class="mt-4">Content / <span class="font-italic">Isi</span></h5>
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea class="form-control" rows="3" placeholder="Placeholder"></textarea>
                                </div>

                                <!-- Receiver Section -->
                                <h5 class="mt-4">Receiver / <span class="font-italic">Penerima</span></h5>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Name</label>
                                        <input type="text" class="form-control" placeholder="Placeholder" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Company Name</label>
                                        <input type="text" class="form-control" placeholder="Placeholder" />
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Department</label>
                                        <input type="text" class="form-control" placeholder="if empty, input '-'">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Address</label>
                                        <input type="text" class="form-control" placeholder="Placeholder">
                                    </div>
                                </div>

                                <!-- Save and Publish buttons -->
                                <div class="form-group d-flex mt-5">
                                    <button type="button" class="btn btn-secondary mr-3">Save as Draft</button>
                                    <button type="submit" class="btn btn-success">Save Changes</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
