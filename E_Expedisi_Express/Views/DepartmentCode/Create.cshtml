@model E_Expedisi_Express.DTO.DepartmentCodeDTO

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 d-flex align-items-center">
                    <h1 class="m-0 mr-2">Department Code</h1>
                    <h2 class="mr-2">| </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/DepartmentCode">Department Code</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/DepartmentCode/Create">Add Department Code</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Create" id="createDepartmentCodeForm" method="post" class="needs-validation" novalidate>
                                <h4>Add New Department Code</h4>
                                <p class="paragraph-custom">Be sure you don't have any duplicate of your Department Name and/or Code</p>

                                <div class="form-group">
                                    <label asp-for="Name">Department</label>
                                    <input asp-for="Name" id="nameInput" class="form-control" placeholder="Department Name" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Code"></label>
                                    <input asp-for="Code" id="codeInput" class="form-control" placeholder="Department Code" required />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <input asp-for="Description" class="form-control" placeholder="The Description goes here" required />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-group d-flex justify-content-end mt-5">
                                    <a href="/DepartmentCode" class="btn btn-secondary mr-3">Cancel</a>
                                    <button type="submit" id="submitButton" class="btn btn-success">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Duplicate Name -->
    <div class="modal fade" id="nameExistsModal" tabindex="-1" role="dialog" aria-labelledby="nameExistsLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h4 class="modal-title text-white" id="nameExistsLabel">Warning</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    The name you entered already exists. Please choose another name.
                </div>
                <div class="modal-footer align-items-left">
                    <button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Duplicate Code -->
    <div class="modal fade" id="codeExistsModal" tabindex="-1" role="dialog" aria-labelledby="codeExistsLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h4 class="modal-title text-white" id="codeExistsLabel">Warning</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    The code you entered already exists. Please choose another code.
                </div>
                <div class="modal-footer align-items-left">
                    <button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Dapatkan elemen input form
            var codeInput = document.querySelector('input[name="Code"]');

            // Fungsi untuk normalisasi input
            function normalizeInput(inputElement) {
                // Ambil nilai input dan lakukan transformasi:
                // 1. Hapus karakter yang bukan huruf
                // 2. Jadikan huruf kecil menjadi huruf besar
                // 3. Batasi maksimal 3 karakter
                var newValue = inputElement.value.replace(/[^a-zA-Z]/g, '').toUpperCase().slice(0, 3);
                inputElement.value = newValue;
            }

            // Event listener untuk validasi input
            codeInput.addEventListener('input', function () {
                normalizeInput(codeInput);
            });
        });

        $(document).ready(function () {
            $('#createDepartmentCodeForm').on('submit', function (e) {
                e.preventDefault(); // Prevent the form from submitting immediately

                // Get the values from the input fields
                var name = $('#nameInput').val();
                var code = $('#codeInput').val();

                // Perform an AJAX request to check if the name or code exists
                $.ajax({
                    url: '@Url.Action("CheckDuplicate", "DepartmentCode")', // Call the CheckDuplicate action
                    type: 'POST',
                    data: {
                        name: name,
                        code: code
                    },
                    success: function (response) {
                        if (response.nameExists) {
                            // Show the Name Exists modal
                            $('#nameExistsModal').modal('show');
                        } else if (response.codeExists) {
                            // Show the Code Exists modal
                            $('#codeExistsModal').modal('show');
                        } else {
                            // No duplicates, submit the form
                            $('#createDepartmentCodeForm')[0].submit();
                        }
                    }
                });
            });
        });
    </script>
}