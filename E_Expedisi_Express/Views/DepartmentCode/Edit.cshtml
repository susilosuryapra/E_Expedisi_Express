@model E_Expedisi_Express.DTO.DepartmentCodeDTO

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 d-flex align-items-center">
                    <h1 class="m-0 mr-2">Department Code</h1>
                    <h2 class="mr-2">| </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/DepartmentCode">Department Code</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/DepartmentCode/Edit/@Model.NewId">Edit Department Code</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <!-- Form with the correct ID -->
                            <form asp-action="Edit" id="editForm" method="post" class="needs-validation" novalidate>
                                <h4>Edit Department Code</h4>
                                <p class="paragraph-custom">Be sure you don't have any duplicate of your Department Name and/or Code</p>

                                <input type="hidden" asp-for="NewId" />

                                <div class="form-group">
                                    <label asp-for="Name">Department</label>
                                    <input asp-for="Name" id="nameInput" class="form-control" placeholder="Department Name" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Code">Department Code</label>
                                    <input asp-for="Code" id="codeInput" class="form-control" placeholder="Department Code" required />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description">Description</label>
                                    <input asp-for="Description" class="form-control" placeholder="The Description goes here" required />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="IsActive">Status</label>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="IsActive" name="IsActive" value="true" @(Model.IsActive ? "checked" : "")>
                                        <label class="custom-control-label" id="statusLabel" for="IsActive">
                                            @(Model.IsActive ? "Active" : "Inactive")
                                        </label>
                                    </div>
                                </div>


                                <div class="form-group d-flex justify-content-end mt-5">
                                    <a href="/DepartmentCode" class="btn btn-secondary mr-3">Cancel</a>
                                    <button type="submit" class="btn btn-success">Save Changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/AdminLTE/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script>
        $(document).ready(function () {
            // Validasi input Code
            var codeInput = document.getElementById('codeInput');

            // Fungsi untuk validasi input
            codeInput.addEventListener('input', function () {
                // Ambil nilai input dan lakukan transformasi:
                // 1. Hapus karakter yang bukan huruf
                // 2. Jadikan huruf kecil menjadi huruf besar
                // 3. Batasi maksimal 3 karakter
                var newValue = codeInput.value.replace(/[^a-zA-Z]/g, '').toUpperCase().slice(0, 3);
                codeInput.value = newValue;
            });

            // Script untuk mengubah label Active/Inactive berdasarkan checkbox
            $('#IsActive').change(function () {
                if ($(this).is(':checked')) {
                    $('#statusLabel').text('Active');
                } else {
                    $('#statusLabel').text('Inactive');
                }
            });

            
        });
    </script>

    <script>
        // Tangkap form yang akan di-submit
        const form = document.getElementById('createDepartmentCodeForm') || document.getElementById('editForm');

        // Event listener untuk tombol submit form
        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Mencegah submit form default

            // Tampilkan SweetAlert untuk konfirmasi
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to submit this data?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, submit it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit form jika pengguna menekan "Yes"
                    form.submit();
                }
            });
        });
    </script>
}


