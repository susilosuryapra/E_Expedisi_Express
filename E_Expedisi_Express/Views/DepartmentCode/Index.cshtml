@model IEnumerable<E_Expedisi_Express.DTO.DepartmentCodeDTO>

<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6 d-flex align-items-center">
                    <h1 class="m-0 mr-2">Department Code</h1>
                    <h2 class="mr-2">| </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/DepartmentCode">Department Code</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <!-- Tombol Add New Record -->
                            <div class="d-flex justify-content-between mb-3">
                                <a href="/DepartmentCode/Create" class="btn btn-success">Add New Record</a>
                            </div>

                            <table id="departmentCodesTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>Code</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(Model!=null){
                                        int Count = 1;
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center align-middle">@Count</td>
                                                <td>@item.DepartmentName</td>
                                                <td>@item.DepartmentCode</td>
                                                <td>@item.Description</td>
                                                <td>@(item.IsActive ? "Active" : "Inactive")</td>
                                                <td class="text-center align-middle">
                                                    <a href="/DepartmentCode/Edit/@item.NewId" class="btn btn-sm btn-success">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            Count++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <th colspan="6">Data is Null</th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- DataTables JS -->
@section Scripts {
    <script src="~/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/AdminLTE/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#departmentCodesTable').DataTable({
                "responsive": true,
                "autoWidth": false,
            });
        });
    </script>

    <script>
        // Cek query string untuk flag success
        const urlParams = new URLSearchParams(window.location.search);
        const success = urlParams.get('success');

        // Jika sukses, tampilkan SweetAlert
        if (success) {
            // Hapus query string "success=true" dari URL
            const newUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
            window.history.replaceState({ path: newUrl }, '', newUrl);

            Swal.fire({
                title: 'Success!',
                text: 'Data has been successfully saved.',
                icon: 'success',
                confirmButtonText: 'OK',
                timer: 3000,  // Tampilkan selama 3 detik
                timerProgressBar: true
            });
        }
    </script>
}
