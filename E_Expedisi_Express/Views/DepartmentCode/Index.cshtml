@model IEnumerable<E_Expedisi_Express.DTO.DepartmentCodeDTO>

<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6 d-flex align-items-center">
                    <h1 class="m-0 mr-2">Department Code</h1>
                    <h2 class="mr-2">| </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="fas fa-home"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="/DepartmentCode">Department Code</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <!-- Tombol Add New Record -->
                            <div class="d-flex justify-content-between mb-3">
                                <a href="/DepartmentCode/Create" class="btn btn-success">Add New Record</a>
                            </div>

                            <table id="departmentCodesTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>Code</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(Model!=null){
                                        int Count = 1;
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center align-middle">@Count</td>
                                                <td>@item.Name</td>
                                                <td>@item.Code</td>
                                                <td>@item.Description</td>
                                                <td>@(item.IsActive ? "Active" : "Inactive")</td>
                                                <td class="text-center align-middle">
                                                    <a href="/DepartmentCode/Edit/@item.NewId" class="btn btn-sm btn-success">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            Count++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <th colspan="6">Data is Null</th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Successful Creation -->
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success">
                    <h4 class="modal-title" id="successModalLabel">Success</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    The new department has been <strong>successfully created!</strong>
                </div>
                <div class="modal-footer align-items-left">
                    <button type="button" class="btn btn-success" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- DataTables JS -->
@section Scripts {
    <script src="~/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#departmentCodesTable').DataTable({
                "responsive": true,
                "autoWidth": false,
            });

            // Check if the 'success' query parameter is present
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('success')) {
                // If 'success' parameter is found, show the success modal
                $('#successModal').modal('show');
            }

            if (urlParams.has('success')) {
                // Show the modal
                $('#successModal').modal('show');

                // Remove the 'success' parameter from the URL after showing the modal
                const newUrl = window.location.href.split('?')[0];
                window.history.replaceState({}, document.title, newUrl);
            }
        });
    </script>
}
